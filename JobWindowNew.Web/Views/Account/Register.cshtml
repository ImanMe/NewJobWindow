@model JobWindowNew.Web.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>

    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="col-md-12">
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            <span class="glyphicon glyphicon-asterisk text-danger"></span>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control fcoontrolform" })

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            <span class="glyphicon glyphicon-asterisk text-danger"></span>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control fcoontrolform" })

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            <span class="glyphicon glyphicon-asterisk text-danger"></span>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control fcoontrolform" })

        </div>
        <div class="form-group">
            <div class="">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
