@model JobWindowNew.Domain.ViewModels.AssignRoleViewModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AssignRole</title>
</head>
<body>
<div>
    <div class="row">
        <div class="col-md-12">
            <h3 class="pull-left">Assign a role</h3>
            <button class="btn btn-primary backtolist-btn pull-right" style="margin-top: 10px;" onclick="location.href='@Url.Action("Index", "Jobs")'">Back To List</button>
        </div>
    </div>
    <hr/>
    @using (Html.BeginForm("AssignRole", "Account"))
    {
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.UserId)
                    <span class="glyphicon glyphicon-asterisk text-danger"></span>@Html.DropDownListFor(m => m.UserId, new SelectList(Model.Users, "Id", "UserName"), "", new { @class = "form-control fcoontrolform" })
                    @Html.ValidationMessageFor(m => m.UserId, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.RoleName)
                    <span class="glyphicon glyphicon-asterisk text-danger"></span>@Html.DropDownListFor(m => m.RoleName, new SelectList(Model.Roles, "Name", "Name"), "", new { @class = "form-control fcoontrolform" })
                    @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })
                </div>
                <button class="btn btn-primary" type="submit">Save</button>
            </div>
            </div>
    }
</div>
</body>
</html>
