
@{
    ViewBag.Title = "InActiveReport";
}

@using (Html.BeginForm("InActiveReport", "Reports", FormMethod.Post))
{
    <div class="row" style="margin-top: 30px;">
        <div class="col-md-3 col-lg-2">
            <label>Scheduling Pod Id</label>
            <div class="input-group">
                @Html.TextBox("podId", ViewBag.podId as string, new { @class = "form-control", @type = "number" })
                <span class="input-group-btn">                   
                    <button type="submit" style="width: 100%" class="btn btn-primary"><i class="glyphicon glyphicon-file"></i></button>
                </span>
            </div>
        </div>
    </div>
}


