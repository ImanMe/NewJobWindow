@model JobWindowNew.Domain.ViewModels.ReportGetViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ActiveReport</title>
</head>
<body>
    <div style="padding-left: 50px; padding-right: 50px;">
        @using (Html.BeginForm("ActiveReport", "Reports"))
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.JobBoardId)
                        @Html.DropDownListFor(m => m.JobBoardId, new SelectList(Model.JobBoards, "Id", "JobBoardName"), "", new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(model => model.PodId)
                        @Html.EditorFor(model => model.PodId, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-file"></i> Generate</button>
                </div>
            </div>
        }
        </div>
</body>
</html>
